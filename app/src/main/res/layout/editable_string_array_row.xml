<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/row_margin"
              android:layout_marginTop="@dimen/row_margin"
              android:orientation="horizontal">

    <EditText
        android:id="@+id/editable_string_row_editor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_padding"
        android:layout_weight="1"
        android:inputType="text"
        android:singleLine="true"/>

    <ImageButton
        android:id="@+id/editable_string_row_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/button_nobg"
        android:contentDescription="@string/delete"
        android:padding="@dimen/list_padding"
        android:src="@drawable/delete"/>

</LinearLayout>